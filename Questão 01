let idade = parseInt(prompt("Digite sua idade:"));

// Usamos if / else if para verificar em qual faixa etária a idade se encaixa
if (idade >= 0 && idade <= 12) {
    console.log("Criança");
} else if (idade >= 13 && idade <= 17) {
    console.log("Adolescente");
} else if (idade >= 18 && idade <= 59) {
    console.log("Adulto");
} else if (idade >= 60) {
    console.log("Idoso");
} else {
    console.log("Idade inválida");
}
